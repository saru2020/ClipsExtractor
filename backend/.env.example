# AWS Configuration (Required)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-2
S3_BUCKET_NAME=clips-extractor-media

# Media Processing Configuration
MEDIA_TEMP_PATH=/tmp/clips-extractor-media

# Optional: Local Development
# Set to true to use local storage instead of S3
USE_LOCAL_STORAGE=true

# IMPORTANT: Avoid setting proxy variables (HTTP_PROXY, HTTPS_PROXY) as they can cause conflicts
# with the OpenAI client library 